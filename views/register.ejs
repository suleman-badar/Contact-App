<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/Assets/logo.png">
    <title>Register | Contact Manager</title>

    <link rel="stylesheet" href="/css/register-style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>
    <div id="head">
        <div class="logo">ðŸ“‡ ContactManager</div>
        <button id="themeToggle" class="btn btn-outline-secondary d-flex align-items-center user-icon">
            <i id="themeIcon" class="fas fa-moon me-2"></i>
        </button>
    </div>

    <div class="content">
        <div class="register-container">
            <center>
                <h2>Create an Account</h2>
            </center>
            <form action="/register" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="username">Full Name</label>
                    <input type="text" id="username" name="name" required placeholder="Enter your full name" class="form-control" value="<%= name || '' %>">
                    <div class="invalid-feedback">Please enter your full name.</div>
                </div>

                <div class="form-group">
                    <label for="photo">Upload Photo</label>
                    <input type="file" id="photo" name="photo" accept="image/*" class="form-control">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="Enter your email" value="<%= email || '' %>" class="form-control">
                    <div class="invalid-feedback">Please enter a valid email.</div>
                    <% if (error && error.includes("email")) { %>
                        <p style="color: red; font-size: 0.9em;">
                            <%= error %>
                        </p>
                        <% } %>
                </div>

                <div class="form-group position-relative">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required pattern=".{8,}" title="Password must be at least 8 characters long" placeholder="Enter your password" class="form-control">
                    <i class="fa-solid fa-eye toggle-password" onclick="togglePassword(this, 'password')" style="position: absolute; top: 45px; right: 10px; cursor: pointer;"></i>
                    <div class="invalid-feedback">Password must be at least 8 characters long.</div>
                </div>

                <div class="form-group position-relative">
                    <label for="confirmPass">Confirm Password</label>
                    <input type="password" id="confirmPass" name="confirmPass" required placeholder="Confirm your password" class="form-control">
                    <i class="fa-solid fa-eye toggle-password" onclick="togglePassword(this, 'confirmPass')" style="position: absolute; top: 45px; right: 10px; cursor: pointer;"></i>
                    <div id="confirmFeedback" class="invalid-feedback">Passwords must match.</div>
                    <% if (typeof error !== 'undefined' && error.includes('Password')) { %>
                        <p style="color: red; font-size: 0.9em;">
                            <%= error %>
                        </p>
                        <% } %>
                </div>

                <center>
                    <button type="submit" class="btn btn-outline-primary mt-3">Register</button>
                    <div class="login-link mt-2">
                        Already have an account? <a href="/login">Login</a>
                    </div>
                </center>
            </form>
        </div>
    </div>


    <script src="/js/app.js"></script>
    <script src="/js/register-validations.js"></script>

</body>

</html>