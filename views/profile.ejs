<% layout("/layouts/boilerplate.ejs") %>

    <div class="container mt-5">
        <div class="d-flex justify-content-center">
            <div class="profile-card ">
                <div class="row align-items-center g-4">
                    <div class="col-md-4 text-center">
                        <img src="<%=user.photo && user.photo.trim() !== '' ? user.photo: '/Assets/default-user.png' %>" alt="User Photo" class="profile-img mb-3" />
                    </div>
                    <div class="col-md-8">
                        <h2 class="text-blue">
                            <%= user.name %>
                        </h2>
                        <p><i class="fa fa-envelope text-blue me-2"></i>
                            <%= user.email %>
                        </p>
                        <p><i class="fa fa-user text-blue me-2"></i>
                            <%= user.username || 'Not set' %>
                        </p>
                        <p><i class="fa fa-calendar text-blue me-2"></i> Joined on
                            <%= user.createdAt ? user.createdAt.toDateString() : 'Date not available' %>
                        </p>
                        <div class="mt-4">
                            <a href="/home" class="btn btn-outline-primary me-2">Back to Contacts</a>
                            <a href="/" class="btn btn-danger">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>