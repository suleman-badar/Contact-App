<% layout("/layouts/boilerplate.ejs") %>

    <script>
        console.log("üë§ User:", "<%= user ? user.email : 'not logged in' %>");
    </script>
    <main class="container my-4 ">
        <div class="contact-details-container  rounded-4 p-4 mx-auto">
            <h2 class="text-center mb-4 text-primary">Contact Details</h2>

            <div class="contact-card d-flex flex-column flex-md-row align-items-center gap-4">
                <div class="left-section text-center">

                    <img src="<%= contact.photo && contact.photo.trim() !== '' || null ? contact.photo : '/Assets/default-contact.png' %>" class="contact-photo mb-3" />
                    <h3 class="contact-name mb-1">
                        <%= contact.name %>
                    </h3>
                    <p class="contact-relation text-muted">
                        <i class="fa-solid fa-people-arrows me-1"></i>
                        <%= contact.relation %>
                    </p>
                </div>

                <div class="right-section w-100">
                    <div class="info-row"><i class="fa-solid fa-phone me-2"></i> <span><%= contact.number %></span></div>
                    <div class="info-row"><i class="fa-solid fa-envelope me-2"></i> <span><%= contact.email %></span></div>
                    <div class="info-row"><i class="fa-solid fa-location-dot me-2"></i> <span><%= contact.city %>, <%= contact.country %></span></div>
                    <div class="info-row"><i class="fa-solid fa-address-card me-2"></i> <span><%= contact.address %></span></div>
                    <div class="info-row"><i class="fa-solid fa-cake-candles me-2"></i> <span><%= contact.bday %></span></div>
                    <div class="info-row"><i class="fa-solid fa-venus-mars me-2"></i> <span><%= contact.gender %></span></div>
                </div>

            </div>

            <a class="back-link" href="/home">‚Üê Back to Home</a>

        </div>

    </main>